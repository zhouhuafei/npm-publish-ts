{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
